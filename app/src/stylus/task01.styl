@import 'module/base'
@import 'module/nav'

content()
  margin 2em
  padding 2em
  background-color #ffffff
  box-shadow 2px 2px 5px rgba(0, 0, 0, .5)
  -webkit-box-shadow 2px 2px 5px rgba(0, 0, 0, .5)
  -moz-box-shadow 2px 2px 5px rgba(0, 0, 0, .5)


body
  background-color #cacaca

h2
  font-size 1.8em
  margin-bottom 1em
h3
  font-size 1.2em
  color #888888
  margin-bottom 1em

article
  content()

aside
  content()

figure.pic
  width 230px
  margin 1em
  padding 0 1em 1em
  border 1px solid #888888
  text-align center

figure.pic figcaption
  padding 1em 0

.author,time
  font-size 0.8em
  color #888888

article ol li
  list-style-type decimal
  list-style-position inside
article ol
  margin 1em 0
d
table
  font-size .8em
  border .5px solid #dddddd
  width 100%

td,tr,th
  border-right .5px solid #dddddd
  border-bottom .5px solid #dddddd
  padding .2em
  text-align left

tbody tr:last-child td
  background-color #e0e0e0

thead
  background-color #2e2e2e
  color #ffffff

aside h2
  font-size 1.2em
  border-left solid #dddddd 2px
  padding .5em 1em

#container
  height 300px
  display flex
  display -webkit-flex
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center


