@import 'module/base'
@import 'module/nav'

content()
  margin 2em
  padding 2em
  background-color #ffffff
  box-shadow 2px 2px 5px rgba(0, 0, 0, .5)
  -webkit-box-shadow 2px 2px 5px rgba(0, 0, 0, .5)
  -moz-box-shadow 2px 2px 5px rgba(0, 0, 0, .5)


body
  background-color #cacaca

h2
  font-size 1.8em
  margin-bottom 1em
h3
  font-size 1.2em
  color #cccccc
  margin-bottom 1em

article
  content()

aside
  content()

figure
  width 230px
  margin 1em
  padding 0 1em 1em
  border 1px solid #cccccc
  text-align center
figcaption
  padding 1em 0


#container
  height 300px
  display flex
  display -webkit-flex
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center


