@import 'module/base'
@import 'module/footer'

body
  padding 20px

section,.container
  border 1px solid #999

.container
  background-color #eee
  padding 20px 160px 20px 240px

.container:after
  content ""
  display block
  height 0
  visibility hidden
  clear both

section
  background-color #ffffff
  padding 20px

section:first-child
  position relative
  float left
  width 200px
  margin-left -220px
  margin-right 20px

section:first-child h2
  position absolute
  top 20px
  right 20px

section:nth-child(2)
  float left
  width 100%

section:last-child
  width 120px
  float right
  margin-right -140px
  margin-left 20px

.members figure+figure
  margin-top 20px

img
  width 80px
  height 80px

.members img
  border-radius 50%
