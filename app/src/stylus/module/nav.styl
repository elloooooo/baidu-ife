nav
  position relative
  background-color black
  padding .5em 2em

nav:after
  content ""
  visibility hidden
  display block
  clear both


nav h1,nav li,nav a
  display inline-block
  color #ffffff

nav ul
  height 50px
  display inline-block
  float right

nav ul:after
  content ""
  display inline-block
  height 100%
  vertical-align middle

nav li
  margin-right 1em

nav h1
  margin-left 1em

